//Adding new stock item
.container
    .well
        //giving the form a name to access it from Controller
        form.form-horizontal(name="updateStockForm")
            fieldset
                legend Alter Stock Item
                .form-group
                    label.col-md-2.control-label(for="pname") Product Name
                    .col-md-10
                        input.form-control(name="pname", type="text", required, ng-model="pname")
                .form-group
                    label.col-md-2.control-label(for="pd") Description
                    .col-md-10
                        input.form-control(name="pd", type="text", required, ng-model="pd")
                .form-group
                    label.col-md-2.control-label(for="pc") Category
                    .col-md-10
                        input.form-control(name="pc", type="text", required, ng-model="pc")
                .form-group
                    label.col-md-2.control-label(for="vin") Vintage
                    .col-md-1
                        input.form-control(name="vin", type="checkbox", ng-model="vin")
                    label.col-md-2.control-label(for="acc") Accessory
                    .col-md-1
                        input.form-control(name="acc", type="checkbox", ng-model="acc")
                .form-group
                    label.col-md-2.control-label(for="quan") Quantity
                    .col-md-10
                        input.form-control(name="price", type="number", min="0", required, ng-model="quan")
                .form-group
                    label.col-md-2.control-label(for="cost") Price
                    .col-md-10
                        input.form-control(name="cost", type="number", min="0.01", step="0.01",  required, ng-model="cost")
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click="update()") Submit
                            | &nbsp &nbsp;
                            a.btn(href="/stock/item/{{product._id}}") Cancel
